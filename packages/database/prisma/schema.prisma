generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleStatus {
  PENDING
  PAID
  IN_DELIVERY
  COMPLETED
  CANCELED
  RETURNED
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  code       String    @unique
  barcode    String    @unique
  sale_price Decimal   @db.Decimal(10, 2)
  deleted_at DateTime?

  batches   Batch[]
  itemsSale ItemSale[]

  @@map("products")
}

model Batch {
  id                 Int      @id @default(autoincrement())
  tax_invoice_number String
  unit_cost_price    Decimal  @db.Decimal(12, 4)
  expiration_date    DateTime @db.Date
  purchase_date      DateTime @db.Date
  current_quantity   Int
  purchase_quantity  Int
  product_id         Int

  product Product @relation(fields: [product_id], references: [id], map: "fk_batch_product", onDelete: Cascade)

  @@map("batches")
}

model Customer {
  id           Int       @id @default(autoincrement())
  name         String
  birth_date   DateTime? @db.Date
  contact_info String?
  deleted_at   DateTime?

  sales Sale[]

  @@map("customers")
}

model Sale {
  id          Int        @id @default(autoincrement())
  total_value Decimal    @db.Decimal(10, 2)
  channel     String
  sale_date   DateTime
  status      SaleStatus @default(PENDING)
  customer_id Int

  customer Customer @relation(fields: [customer_id], references: [id], map: "fk_sale_customer")

  itemsSale ItemSale[]

  @@map("sales")
}

model ItemSale {
  id                 Int     @id @default(autoincrement())
  unit_sale_price    Decimal @db.Decimal(10, 2)
  unit_cost_snapshot Decimal @db.Decimal(12, 4)
  quantity           Int
  product_id         Int
  sale_id            Int

  product Product @relation(fields: [product_id], references: [id], map: "fk_item_product")
  sale    Sale    @relation(fields: [sale_id], references: [id], map: "fk_item_sale", onDelete: Cascade)

  @@map("items_sale")
}
